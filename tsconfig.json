{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["ES2020", "DOM"],
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "index.ts"],
    "exclude": ["node_modules"]
}